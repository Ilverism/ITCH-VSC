{
    "name": "inline-tag-context-hider-vsc",
    "displayName": "Inline Tag Context Hider - VSC",
    "description": "Define foldable inline content areas with Regex to hide extraneous info when viewing a file.",
    "icon": "images/ITCH_VSC_128x128_Logo.png",
    "version": "1.0.1",
    "publisher": "ilverism",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ilverism/ITCH-VSC"
    },
    "engines": {
        "vscode": "^1.101.0"
    },
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:svelte",
        "onLanguage:vue",
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:javascriptreact",
        "onLanguage:typescriptreact",
        "onLanguage:markdown",
        "onLanguage:plaintext",
        "onLanguage:xml",
        "onLanguage:php"
    ],
    "contributes": {
        "commands": [
            {
                "command": "inlineTagContextHider.toggle",
                "title": "ITCH-VSC: Toggle"
            },
            {
                "command": "inlineTagContextHider.toggleMultiline",
                "title": "ITCH-VSC: Toggle Multiline"
            },
            {
                "command": "inlineTagContextHider.toggleCommentFolds",
                "title": "ITCH-VSC: Toggle Comment Folds"
            }
        ],
        "keybindings": [
            {
                "command": "inlineTagContextHider.toggle",
                "key": "ctrl+alt+h",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "Inline Tag Context Hider",
            "properties": {
                "inlineTagContextHider.regex": {
                    "type": "string",
                    "default": "(<span[^>]*class=(?:['\\\"]eye['\\\"]).*?>)|(<\\/span>)",
                    "description": "RegExp for tags to hide"
                },
                "inlineTagContextHider.flags": {
                    "type": "string",
                    "default": "gi",
                    "description": "RegExp flags"
                }
            }
        }
    },
    "main": "./dist/extension.js",
    "scripts": {
        "compile": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "vscode:prepublish": "npm run package",
        "package": "npm run check-types && node esbuild.js --production"
    },
    "devDependencies": {
        "@types/node": "^24.0.13",
        "@types/vscode": "^1.101.0",
        "esbuild": "^0.25.6",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "eslint": "^9.30.1",
        "npm-check-updates": "^18.0.1"
    }
}
